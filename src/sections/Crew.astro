---
import { Icon } from 'astro-icon/components';
const title = 'Meet the Crew';

const members = [
	{
		name: 'diangogav',
		role: 'Project Lead',
		picture: '/avatar.webp',
	},
	{
		name: 'leip1493',
		role: 'Developer',
		picture: '/avatar.webp',
	},
	{
		name: 'termitaklk',
		role: 'Developer',
		picture: '/avatar.webp',
	},
	{
		name: 'leandrogavidia',
		role: 'Designer',
		picture: '/avatar.webp',
	},
	{
		name: 'darkjinzo',
		role: 'Community Manager',
		picture: '/avatar.webp',
	},
	{
		name: 'diegofcornejo',
		role: 'DevOps & SRE',
		picture: '/crew/diegofcornejo.webp',
	},
];
---

<div class='flex flex-col items-center gap-8 my-16' id='section-crew'>
	<h1 class='font-bold text-3xl self-center'>{title}</h1>
	<div class='grid grid-cols-1 sm:grid-cols-3 gap-20'>
		{
			members.map((member) => (
				<div class='flex gap-4'>
					<img alt={member.name} src={member.picture} class='rounded-full w-24' />

					<div class='flex flex-col gap-2'>
						<h3 class='font-bold'>{member.name}</h3>
						<span class='text-sm'>{member.role}</span>
						<div class='flex text-secondary text-xs'>
							<a class='btn btn-ghost btn-sm btn-circle'>
								<Icon name='mdi:discord' class='text-xl'/>
							</a>
							<a class='btn btn-ghost btn-sm btn-circle'>
								<Icon name='mdi:github' class='text-xl'/>
							</a>
							<a class='btn btn-ghost btn-sm btn-circle'>
								<Icon name='mdi:twitter' class='text-xl'/>
							</a>
							<a class='btn btn-ghost btn-sm btn-circle'>
								<Icon name='mdi:facebook' class='text-xl'/>
							</a>
						</div>
					</div>
				</div>
			))
		}
	</div>
</div>
