---
interface Props {
	title: string;
}

const { title } = Astro.props;
const image = '/img/under-construction.webp';
const description = 'Is under construction. Please check back later.';
---

<div class='flex flex-col items-center gap-4 py-16 mt-8'>
	<img
		src={image}
		alt='Under Construction'
		class='w-1/3 md:w-1/5'
		loading='lazy'
		decoding='async'
		fetchpriority='low'
	/>
	<h1 class='text-3xl font-bold'>{title}</h1>
	<p class='text-gray-500 text-center'>{description}</p>
	<a href='/'><button class='btn btn-primary'>Go to Home</button></a>
</div>