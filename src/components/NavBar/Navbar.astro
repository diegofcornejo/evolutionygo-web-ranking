---
import { Icon } from "astro-icon/components";
import type { MenuItem } from '@types';
import Modal from '@components/Modal.astro';
import { SignInForm, SignUpForm } from '@components/Auth';
import SettingsDialog from '@components/Settings/Modal.astro';
import AnnouncementsDropdown from './AnnouncementsDropdown.astro';
import menuItems from './menuItems';

type MenuItemWithBadge = MenuItem & {
	badgeLabel?: string;
	badgeClass?: string;
};

const menuItemsWithBadges = menuItems as MenuItemWithBadge[];

const getBadgeClass = (item: MenuItemWithBadge) => item.badgeClass ?? 'text-primary';
---

<script>
	import { session, currentNavPath, setNavPath } from '@stores/sessionStore';
	import { update, updateUser, setTheme, handleLogout, handleOpenSettings } from './helper';

	const normalizePath = (href: string | null): { path: string; hash: string } | null => {
		if (!href || href.startsWith('http')) return null;
		const url = new URL(href, window.location.origin);
		return {
			path: url.pathname,
			hash: url.hash,
		};
	};

	const applyActiveNav = (path: string) => {
		const nav = document.querySelector('nav.navbar');
		if (!nav) return;
		const currentHash = window.location.hash;

		nav.querySelectorAll('[data-nav-link]').forEach((link) => {
			const href = link.getAttribute('href');
			const linkData = normalizePath(href);
			const isHashLink = !!linkData?.hash;
			const isHomePath = path === '/';
			const matchesHash = isHomePath && isHashLink && (currentHash === linkData.hash || (!currentHash && linkData.hash === '#section-home'));
			const matchesPath = !!linkData?.path && !isHashLink && (linkData.path === path || path.startsWith(`${linkData.path}/`));
			const isActive = matchesHash || matchesPath;
			link.classList.toggle('text-primary', isActive);
			link.classList.toggle('bg-base-200', isActive);
			link.classList.toggle('font-semibold', isActive);
			if (isActive) {
				link.setAttribute('aria-current', 'page');
			} else {
				link.removeAttribute('aria-current');
			}
		});

		nav.querySelectorAll('[data-nav-group]').forEach((group) => {
			const parent = group.querySelector('[data-nav-parent]');
			if (!parent) return;
			const hasActiveChild = !!group.querySelector('[data-nav-link].text-primary');
			parent.classList.toggle('text-primary', hasActiveChild);
			parent.classList.toggle('bg-base-200', hasActiveChild);
			parent.classList.toggle('font-semibold', hasActiveChild);
		});
	};

	currentNavPath.subscribe((path: string) => {
		if (!path) return;
		applyActiveNav(path);
	});

	session.subscribe(() => {
		update();
		updateUser();
	});

	document.addEventListener('astro:page-load', () => {
		update();
		updateUser();
		setTheme();
		handleLogout();
		handleOpenSettings();
		setNavPath(window.location.pathname);
	});

	window.addEventListener('popstate', () => {
		setNavPath(window.location.pathname);
	});
</script>

<nav class='navbar bg-base-300 sticky top-0 z-50 lg:px-4'>
	<div class='navbar-start'>
		<div class='dropdown'>
			<div tabindex='0' role='button' class='btn btn-ghost lg:hidden' aria-label="Toggle menu">
				<svg
					xmlns='http://www.w3.org/2000/svg'
					class='h-5 w-5'
					fill='none'
					viewBox='0 0 24 24'
					stroke='currentColor'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'
						d='M4 6h16M4 12h8m-8 6h16'></path>
				</svg>
			</div>
			<ul
				tabindex='0'
				class='menu menu-sm dropdown-content bg-base-300 rounded-box z-[1] mt-1 w-52 p-2 shadow'
			>
				{
					menuItemsWithBadges.map((item) =>
						item.submenu ? (
							<li data-nav-group>
								<a data-nav-parent data-umami-event={item.trackEvent}>
									{item.name}
								</a>
								<ul class='p-2'>
									{item.submenu.map((subitem) => (
										<li>
											<a
												data-nav-link
												data-umami-event={subitem.trackEvent}
												href={subitem.href}
												target={subitem?.target}
											>
												{subitem.name}
											</a>
										</li>
									))}
								</ul>
							</li>
						) : (
							<li>
								<a
									data-nav-link
									data-umami-event={item.trackEvent}
									href={item.href}
									target={item?.target}
								>
									<span class="inline-flex items-center gap-1">
										<span>{item.name}</span>
										{item.badgeLabel && (
											<span class={`text-[8px] font-bold ${getBadgeClass(item)}`}>
												{item.badgeLabel}
											</span>
										)}
									</span>
								</a>
							</li>
						),
					)
				}
			</ul>
		</div>
		<a href='/'><img src='/logo.svg' alt='logo' class='h-12 w-auto cursor-pointer' loading='lazy' decoding='async' fetchpriority='low'/></a>
	</div>
	<div class='navbar-center hidden lg:flex'>
		<ul class='menu menu-horizontal px-1'>
			{
				menuItemsWithBadges.map((item) =>
					item.submenu ? (
						<li>
							<details data-nav-group>
								<summary data-nav-parent>
									{item.icon && <Icon name={item.icon} class='fill-current text-2xl'/>}
									{item.name}
								</summary>
								<ul class='p-2 w-48'>
									{item.submenu.map((subitem) => (
										<li>
											<a
												data-nav-link
												href={subitem.href}
												target={subitem?.target}
												data-umami-event={subitem.trackEvent}
											>
												{subitem.icon && <Icon name={subitem.icon} class='fill-current text-2xl'/>}
												{subitem.name}
											</a>
										</li>
									))}
								</ul>
							</details>
						</li>
					) : (
						<li>
							<a
								data-nav-link
								href={item.href}
								target={item?.target}
								data-umami-event={item.trackEvent}
							>
								{item.icon && <Icon name={item.icon} class='fill-current text-2xl'/>}
								<span class="relative">
									{item.name}
									{item.badgeLabel && (
										<span
											class={`absolute -top-2 left-1/2 -translate-x-1/2 text-[8px] font-bold ${getBadgeClass(item)}`}
										>
											{item.badgeLabel}
										</span>
									)}
								</span>
							</a>
						</li>
					),
				)
			}
		</ul>
	</div>
	<div class='navbar-end'>
		<input
			type='checkbox'
			value='dracula'
			class='toggle theme-controller'
			id='button-navbar-theme'
			data-umami-event='navbar-click-theme'
			aria-label='Toggle theme'
		/>
		<AnnouncementsDropdown />
		<div class='dropdown dropdown-end' id='dropdown-navbar-profile' data-umami-event='navbar-click-profile-dropdown'>
			<div tabindex='0' role='button' class='btn btn-ghost btn-circle avatar' aria-label="User profile">
				<div class='w-8 rounded-full ring-primary ring-offset-base-100 ring ring-offset-2'>
					<img id='dropdown-navbar-avatar' alt='avatar' src='' loading='lazy' decoding='async' fetchpriority='low'/>
				</div>
			</div>
			<ul
				tabindex='0'
				class='menu menu-sm dropdown-content bg-base-300 rounded-box z-[1] mt-1 w-56 p-2 shadow border-1 border-primary'
			>
				<li class='text-lg font-bold text-center pt-2 pb-4' id='navbar-username'></li>
				<li>
					<a class='justify-between' id='dropdown-navbar-profile-link' data-umami-event='navbar-click-profile'>
						Profile
						<!-- <span class='badge badge-sm badge-primary'>New</span> -->
					</a>
				</li>
				<li><a id='button-navbar-settings' data-umami-event='navbar-click-settings'>Settings</a></li>
				<li><a id='button-navbar-logout' data-umami-event='navbar-click-logout'>Logout</a></li>
			</ul>
		</div>
	</div>
	<SettingsDialog />
	<Modal id='signin' open='Login' showButtons={false}>
		<SignInForm dialog='signin' slot='main' client:load />
	</Modal>
	<Modal id='signup' open='Register' showButtons={false}>
		<SignUpForm dialog='signup' slot='main' client:load />
	</Modal>
</nav>
