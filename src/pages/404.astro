---
import Layout from '@layouts/Layout.astro';
const title = 'Page Not Found';
const image = '/img/404.webp';
const description = 'The page you are looking for does not exist. Please check the URL and try again.';
---

<Layout 
	title={title} 
	description={description} 
	image={image}
	noindex={true}
	nofollow={true}
>
	<main class='w-full text-[white] text-xl leading-[1.6] mx-auto'>
		<div class='flex flex-col items-center gap-4 py-8'>
			<img
				src={image}
				alt='Under Construction'
				class='w-1/3 md:w-1/5'
				loading='lazy'
				decoding='async'
				fetchpriority='low'
			/>
			<p class='text-gray-500 text-center'>{description}</p>
			<a href='/'><button class='btn btn-primary'>Go to Home</button></a>
		</div>
	</main>
</Layout>
