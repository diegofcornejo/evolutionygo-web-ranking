---
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions';
import { Toaster } from 'sonner';
import Navbar from '@components/NavBar/Navbar.astro';
import Footer from '@components/Footer.astro';
import AnimationFrameSnow from '@components/Random/AnimationFrameSnow.svelte';
import { isFeatureEnabled } from '@stores/featureFlagsStore';
import SEO from '@components/SEO.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: 'website' | 'article' | 'profile';
	canonicalURL?: string | URL;
	noindex?: boolean;
	nofollow?: boolean;
	keywords?: string[];
	jsonLd?: Record<string, unknown>;
}

import '@fontsource-variable/plus-jakarta-sans';

const { 
	title, 
	description, 
	image = "/banners/banner1.webp", 
	type = 'website', 
	canonicalURL = new URL(Astro.url.pathname, Astro.site),
	noindex = false,
	nofollow = false,
	keywords,
	jsonLd
} = Astro.props;

const { PUBLIC_ANALYTICS_ID, PUBLIC_ANALYTICS_URL, PUBLIC_DD_RUM_APP_ID, PUBLIC_DD_RUM_CLIENT_TOKEN, PUBLIC_DD_RUM_SERVICE, NODE_ENV } = import.meta.env;

const datadogConfig = {
	clientToken: PUBLIC_DD_RUM_CLIENT_TOKEN,
	applicationId: PUBLIC_DD_RUM_APP_ID,
	service: PUBLIC_DD_RUM_SERVICE,
	env: NODE_ENV,
	defaultPrivacyLevel: 'mask-user-input',
}
---

<!doctype html>
<html lang="en" data-theme="night">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Component with all meta tags and JSON-LD -->
		<SEO 
			title={title}
			description={description}
			image={image}
			type={type}
			canonicalURL={canonicalURL}
			noindex={noindex}
			nofollow={nofollow}
			keywords={keywords}
			jsonLd={jsonLd}
		/>

		<!-- Analytics (via Partytown for performance) -->
		<script is:inline type="text/partytown" async src={PUBLIC_ANALYTICS_URL} data-website-id={PUBLIC_ANALYTICS_ID}></script>
		
		<!-- Datadog RUM -->
		<script is:inline set:html={`
			(function(h,o,u,n,d) {
				h=h[d]=h[d]||{q:[],onReady:function(c){h.q.push(c)}}
				d=o.createElement(u);d.async=1;d.src=n
				n=o.getElementsByTagName(u)[0];n.parentNode.insertBefore(d,n)
			})(window,document,'script','https://www.datadoghq-browser-agent.com/us1/v6/datadog-rum.js','DD_RUM')
			window.DD_RUM.onReady(function() {
				window.DD_RUM.init(${JSON.stringify(datadogConfig)});
			})
		`}/></script>
		
		<!-- View Transitions -->
		<ClientRouter/>
	</head>
	<body id='section-home'>
		<Navbar />
		<slot />
		<Footer />
		{isFeatureEnabled('SHOW_SNOW_EFFECT') && <AnimationFrameSnow client:only='svelte'/>}
		<Toaster richColors closeButton duration={5000} position='bottom-right' client:load/>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Plus Jakarta Sans Variable', system-ui, sans-serif;
		background: #13151a;
		scroll-behavior: smooth;
		@media (prefers-reduced-motion: reduce) {
			scroll-behavior: auto;
		}
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
