{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@types": ["./src/types/types.d.ts"],
      "@types/*": ["./src/types/*"],
      "@sections/*": ["./src/sections/*"],
      "@stores/*": ["./src/stores/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}